<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/widget30"
android:layout_width="fill_parent"
android:layout_height="225px"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<LinearLayout
android:id="@+id/tophi"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:paddingTop="10dp"

>
<TextView
android:id="@+id/top"
android:layout_height="wrap_content"
android:text="Top 3 High Score"
android:paddingLeft="10dp"
android:textStyle="bold"
android:layout_width="fill_parent" android:gravity="center">
</TextView>
</LinearLayout>
<LinearLayout
android:id="@+id/namelist"
android:layout_width="fill_parent"
android:layout_below="@+id/tophi"
android:layout_height="wrap_content"
>
<TextView
android:id="@+id/namehi1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textColor="#ffffff00"
android:text="1.                "
android:textStyle="bold"
android:paddingLeft="50dp"
>
</TextView>

</LinearLayout>
<LinearLayout
android:id="@+id/secondhi"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/namelist">
<TextView
android:id="@+id/namehi2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textColor="#ffffff00"
android:text="2.                "
android:textStyle="bold"
android:paddingLeft="50dp">
</TextView>
</LinearLayout>

<LinearLayout
android:id="@+id/thirdhi"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/secondhi">
<TextView
android:id="@+id/namehi3"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textColor="#ffffff00"
android:text="3.                "
android:textStyle="bold"
android:paddingLeft="50dp"
>
</TextView>
</LinearLayout>
<LinearLayout
android:id="@+id/kilo"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:paddingTop="10dp"
android:layout_below="@+id/thirdhi"
>
<TextView
android:id="@+id/top2"
android:layout_height="wrap_content"
android:text="Top 3 Fast Playtime"
android:textStyle="bold"
android:paddingLeft="10dp"

android:layout_width="fill_parent" android:gravity="center">
</TextView>
</LinearLayout>
<LinearLayout
android:id="@+id/namelist1"
android:layout_width="fill_parent"
android:layout_below="@+id/kilo"
android:layout_height="wrap_content"

>
<TextView
android:id="@+id/namefast1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="1.                "
android:textColor="#ffffff00"
android:textStyle="bold"
android:paddingLeft="50dp"
>
</TextView>
</LinearLayout>
<LinearLayout
android:id="@+id/namelist2"
android:layout_width="fill_parent"
android:layout_below="@+id/namelist1"
android:layout_height="wrap_content"
>
<TextView
android:id="@+id/namefast2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="2.                "
android:textColor="#ffffff00"
android:textStyle="bold"
android:paddingLeft="50dp"
>
</TextView>

</LinearLayout>

<LinearLayout
android:id="@+id/namelist3"
android:layout_width="fill_parent"
android:layout_below="@+id/namelist2"
android:layout_height="wrap_content"
>
<TextView
android:id="@+id/namefast3"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="3.                "
android:textColor="#ffffff00"
android:textStyle="bold"
android:paddingLeft="50dp"
>
</TextView>

</LinearLayout>
<Button
android:id="@+id/exitme"
android:layout_width="120px"
android:layout_height="wrap_content"
android:text="Close"
android:layout_below="@+id/namelist3"
android:layout_centerHorizontal="true"
>
</Button>

</RelativeLayout>
