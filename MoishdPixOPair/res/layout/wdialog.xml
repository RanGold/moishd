<RelativeLayout 
	   xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="wrap_content" 
       android:layout_height="wrap_content">
       <LinearLayout 
       android:layout_width="wrap_content" 
       android:layout_height="wrap_content" 
       android:layout_toRightOf="@+id/EditText01" 
       android:id="@+id/LinearLayout01">
       </LinearLayout>
       <LinearLayout 
       android:layout_height="wrap_content" 
       android:layout_toRightOf="@+id/LinearLayout01" 
       android:id="@+id/LinearLayout02" android:layout_width="fill_parent">
       <EditText android:id="@+id/EditText01" 
       android:singleLine="true" android:layout_height="wrap_content" android:maxLength="25" android:layout_width="fill_parent">
       </EditText>
       </LinearLayout>
       
       <ScrollView android:id="@+id/ScrollView01"
       android:layout_width="wrap_content" 
       android:layout_below="@+id/ImageView01"
       android:layout_height="70px">       
	   </ScrollView>
       <Button 
       android:id="@+id/Button01" 
       android:layout_below="@id/ScrollView01"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true" android:text="Log It" android:layout_width="130px"/>
</RelativeLayout>
