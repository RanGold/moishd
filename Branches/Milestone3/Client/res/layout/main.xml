<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#000000"
	android:gravity="center_horizontal">


	<TextView android:id="@+id/moishdName" android:layout_marginTop="7dip"
		android:layout_marginBottom="7dip" android:layout_marginLeft="15dip"
		android:layout_marginRight="15dip"
		android:text="Moish'd!" android:gravity="center_vertical|center_horizontal"
		android:textSize="40dip" android:textColor="#CD2626"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	</TextView>

	<ImageView android:id="@+id/moishdLogo"
		android:layout_margin="7dip" android:src="@drawable/moishd_logo"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center_vertical|center_horizontal" />

	<moishd.android.facebook.LoginButton
		android:id="@+id/login" android:src="@drawable/login_button"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginTop="7dip" android:layout_marginLeft="15dip" 
		android:layout_marginRight="15dip" android:layout_marginBottom="7dip"/>

	<TextView android:id="@+id/currentlyLoggedIn"  android:gravity="center_vertical|center_horizontal"
		android:textSize="15dip" android:layout_marginLeft="5dip" 
		android:textColor="#FFFFFF" android:layout_width="250dip"
		android:layout_height="wrap_content">
	</TextView>

	<Button android:id="@+id/switchAccounts" android:clickable="true"
		android:text="Switch accounts?" android:textSize="15dip"
		android:layout_marginTop="3dip"
		android:layout_marginLeft="2dip" android:layout_marginRight="2dip"
		android:layout_marginBottom="2dip" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:visibility="invisible"
		android:background="#FF6347" android:textColor="#FFFFFF">
	</Button>
</LinearLayout>