<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/myLayout" 
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="#FFFFF0">

	<TextView android:text="The word is..." 
	android:paddingLeft="70px"
	android:paddingTop="30px"
	android:textSize="30dip"
	android:id="@+id/TheWordIs"
	android:textColor="#FF0000" 
	android:textStyle="bold"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
	</TextView>

	<TextView 
	android:id="@+id/theWord" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#FFFF00" 
	android:textStyle="bold"
	android:paddingTop="5px"
	android:layout_marginLeft="10dip">
	</TextView>
	
			
	<TableLayout
	android:id="@+id/myTableLayout" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	>
		
	<TableRow android:id="@+id/thirdRow" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:paddingTop="20px"
	android:orientation="horizontal"
	>
	
	<TableRow android:id="@+id/thirdRow1" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:paddingTop="20px"
	android:orientation="vertical">
	
	<EditText
		android:id="@+id/wordOfUser"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:hint="Hurry up!"
		android:textStyle="italic"
		android:maxWidth="5px"
		android:layout_marginLeft="25dip"
		android:textSize="15dip"
		android:paddingTop="10px">
		</EditText>
	</TableRow>
	
	<TableRow android:id="@+id/thirdRow2" 
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:orientation="vertical">		
		<Button
		android:text="Moish!"
		android:background="#8470FF"
		android:clickable="true"
		android:soundEffectsEnabled="true"
		android:id="@+id/MoishButton"
		android:drawableBottom="@drawable/handcolor"
		android:layout_marginLeft="10dip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		</Button>
		
</TableRow>
	</TableRow>
			
<TableRow android:id="@+id/forthRow" 
	android:layout_width="wrap_content" 
	android:layout_height="fill_parent"
	android:orientation="horizontal">

<ImageView android:id="@+id/finishTheGame" 
		android:src="@drawable/finishbutton"
		android:clickable="true"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:paddingLeft="60px"
		android:paddingTop="60px"
	>
</ImageView>

</TableRow>


</TableLayout>

</LinearLayout>


