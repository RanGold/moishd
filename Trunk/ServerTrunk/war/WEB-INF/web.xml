<?xml version="1.0" encoding="utf-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>moishd.server.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>InsertUserServlet</servlet-name>
		<servlet-class>moishd.server.servlets.InsertUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>InsertUserServlet</servlet-name>
		<url-pattern>/InsertUser</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DeleteUsersServlet</servlet-name>
		<servlet-class>moishd.server.servlets.DeleteUsersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteUsersServlet</servlet-name>
		<url-pattern>/DeleteUsers</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CookieServlet</servlet-name>
		<servlet-class>moishd.server.servlets.CookieServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CookieServlet</servlet-name>
		<url-pattern>/Cookie</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GetAllUsersServlet</servlet-name>
		<servlet-class>moishd.server.servlets.GetAllUsersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetAllUsersServlet</servlet-name>
		<url-pattern>/GetAllUsers</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>moishd.server.servlets.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/RegisterUser</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UserLoginServlet</servlet-name>
		<servlet-class>moishd.server.servlets.UserLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserLoginServlet</servlet-name>
		<url-pattern>/UserLogin</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>C2DMAuthServlet</servlet-name>
		<servlet-class>moishd.server.servlets.C2DMAuthServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>C2DMAuthServlet</servlet-name>
		<url-pattern>/cron/C2DMAuth</url-pattern>
	</servlet-mapping>
	<security-constraint>
        <web-resource-collection>
            <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/DeleteUsers</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
