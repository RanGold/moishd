<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="vertical"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
   	android:background="#FFFFFF">
  
    <TextView
  		android:id="@+id/text"
  		android:layout_marginTop="40dip" 
  		android:text="Please choose the game you wish to play:" 
		android:layout_marginLeft="20dip"
		android:gravity="center_vertical|center_horizontal"
		android:layout_marginRight="20dip"
		android:textSize="25dip"
		android:textColor="#436EEE" 
		android:textStyle="bold"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</TextView>
	
	<TableRow 
		android:id="@+id/Row01" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginTop="30dip">
	
	<ImageView android:id="@+id/mixing"
		android:src="@drawable/mixing_game"
		android:layout_width="120dip" 
		android:layout_height="140dip"	
		android:clickable="true"
		android:layout_marginLeft="40dip"/>

	<ImageView android:id="@+id/simonpro"
		android:src="@drawable/simonpro_2"
		android:clickable="true"
		android:layout_width="120dip" 
		android:layout_height="140dip"
		layout_marginLeft="20dip"
		android:layout_marginTop="14dip"/>

	</TableRow>


	<TableRow 
		android:id="@+id/Row02" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginTop="5dip">
	
  	<ImageView android:id="@+id/trivia"
  		android:src="@drawable/trivia_1"
  		android:clickable="true"
		android:layout_width="120dip" 
		android:layout_height="140dip"
		android:layout_marginLeft="40dip"
       />	
	
  	<ImageView android:id="@+id/fastClick"
  		android:src="@drawable/fast_click_game"
  		android:clickable="true"
		android:layout_width="120dip" 
		android:layout_height="140dip"
		android:paddingRight="5dip"
		android:layout_marginTop="10dip"
		layout_marginLeft="20dip"
   />

  	</TableRow>

</LinearLayout>
