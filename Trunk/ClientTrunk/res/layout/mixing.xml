<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/myLayout" 
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@drawable/bg2">
	
	<TextView android:text="Find out what is the mixed word, type it to the text box and click the moish button." 
	android:paddingLeft="20dip"
	android:paddingRight="20dip"
	android:paddingTop="10dip"
	android:textSize="20dip"
	android:gravity="center_vertical|center_horizontal"
	android:id="@+id/explain"
	android:textColor="#9A32CD" 
	android:textStyle="bold"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
	</TextView>
	
	<TextView android:text="The word is..." 
	android:paddingLeft="30dip"
	android:paddingRight="30dip"
	android:paddingTop="10dip"
	android:layout_gravity="center"
	android:gravity="center_vertical|center_horizontal"
	android:textSize="30dip"
	android:id="@+id/TheWordIs"
	android:textColor="#7A67EE" 
	android:textStyle="bold"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
	</TextView>

	<TextView 
	android:id="@+id/theWord" 
	android:visibility="invisible"
	android:layout_gravity="center"
	android:gravity="center_vertical|center_horizontal"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#00FF00" 
	android:textStyle="bold"
	android:paddingTop="5dip"
	android:paddingLeft="5dip"
	android:paddingRight="5dip"
>
	</TextView>
	
			
	<TableLayout
	android:id="@+id/myTableLayout" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	>
		
	<TableRow android:id="@+id/thirdRow" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:paddingTop="20px"
	android:orientation="horizontal"
	>
	
	<TableRow android:id="@+id/thirdRow1" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:paddingTop="20px">
	
	<EditText
		android:id="@+id/wordOfUser"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:hint="Hurry up!"
		android:textStyle="italic"
		android:width="170dip"
		android:paddingRight = "10dip"
		android:layout_marginLeft="25dip"
		android:textSize="15dip"
		android:paddingTop="10dip">
		</EditText>
	</TableRow>
	
	<TableRow android:id="@+id/thirdRow2" 
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:orientation="vertical">		
		<Button
		android:text="Moish!"
		android:drawableBottom="@drawable/hand"
		android:background="#EE3B3B"
		android:clickable="true"
		android:paddingLeft="5dip"
		android:textStyle="bold"
		android:paddingRight="5dip"
		android:soundEffectsEnabled="true"
		android:id="@+id/MoishButton"
		android:layout_marginLeft="30dip"
		android:layout_width="match_parent"
		android:layout_marginTop="15dip"
		android:layout_height="wrap_content">
		
		</Button>
		
</TableRow>
	</TableRow>
			


</TableLayout>

</LinearLayout>


