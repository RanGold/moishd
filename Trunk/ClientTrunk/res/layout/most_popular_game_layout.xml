<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
   android:background="@drawable/bg2purple">
  
    <TextView
  	android:id="@+id/text1"
  	android:layout_marginTop="40dip" 
  	android:text="Prepare yourself! " 
	android:layout_marginLeft="10dip"
	android:gravity="center_vertical|center_horizontal"
	android:layout_gravity="center"
	android:layout_marginRight="10dip"
	android:textSize="35dip"
	android:textColor="#436EEE" 
	android:textStyle="bold"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
	</TextView>
	
	
	<ImageView android:id="@+id/mixing"
	android:layout_marginTop="35dip"
	android:src="@drawable/bigger_hand"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_gravity="center"	/>
	
	
	<TextView
  	android:id="@+id/text2"
  	android:layout_marginTop="10dip" 
  	android:text="This game is the most popular Moish'd game!" 
	android:layout_marginLeft="10dip"
	android:gravity="center_vertical|center_horizontal"
	android:layout_gravity="center"
	android:layout_marginRight="10dip"
	android:textSize="30dip"
	android:textColor="#BA55D3" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
	</TextView>
	
</LinearLayout>
